<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base surfaces -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#BEBEBE"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#D2D2D2"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>
    <SolidColorBrush x:Key="HintBrush" Color="#6E6E6E"/>

    <!-- Backward-compatible aliases -->
    <SolidColorBrush x:Key="BgBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="FgBrush" Color="#000000"/>
    <SolidColorBrush x:Key="ControlBgBrush" Color="#F5F5F5"/>

    <!-- ComboBox item states -->
    <SolidColorBrush x:Key="ComboBoxItemHoverBrush" Color="#E6E6E6"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#0078D7"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedForeground" Color="#FFFFFF"/>

    <!-- Overlay brushes -->
    <SolidColorBrush x:Key="OverlayTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OverlayWarningBrush" Color="#FF8040"/>
</ResourceDictionary>
