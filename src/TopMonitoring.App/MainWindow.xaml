<Window x:Class="TopMonitoring.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TopMonitoring" Height="24" Width="800"
        Topmost="True" WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False">
    <Grid x:Name="RootGrid" Background="Transparent" MouseRightButtonUp="OnRightClick">
        <Grid.ContextMenu>
            <ContextMenu x:Name="SettingsContextMenu" StaysOpen="False" Placement="MousePoint">
                <MenuItem Header="Settings..." Click="SettingsMenu_Click"/>
                <Separator/>
                <MenuItem Header="Show" Click="ShowMenu_Click"/>
                <MenuItem Header="Hide" Click="HideMenu_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenu_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Border x:Name="RootBorder" CornerRadius="0" Padding="4,1" SnapsToDevicePixels="True" Background="Transparent">
            <!-- DownOnly ensures text is only shrunk when needed, never enlarged -->
            <Viewbox Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ItemsControl x:Name="MetricsPanel" ItemsSource="{Binding Metrics}" IsHitTestVisible="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Text}" FontSize="11" Margin="4,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource OverlayTextBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAlert}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource OverlayWarningBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </Border>
    </Grid>
</Window>
