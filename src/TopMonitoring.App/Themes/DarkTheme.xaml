<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base surfaces -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#141414"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#444444"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#404040"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#6AA0FF"/>
    <SolidColorBrush x:Key="HintBrush" Color="#9E9E9E"/>

    <!-- Backward-compatible aliases -->
    <SolidColorBrush x:Key="BgBrush" Color="#141414"/>
    <SolidColorBrush x:Key="FgBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBgBrush" Color="#1E1E1E"/>

    <!-- ComboBox item states -->
    <SolidColorBrush x:Key="ComboBoxItemHoverBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#6AA0FF"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedForeground" Color="#FFFFFF"/>

    <!-- Overlay brushes -->
    <SolidColorBrush x:Key="OverlayTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OverlayWarningBrush" Color="#FF8040"/>
</ResourceDictionary>
